@model HomeDetailsViewModel

<div class="row justify-content-center m-3">
    <div class="coi-sm-8">
        <div class="card">
            <div class="card-header">
                <h2>@Model.Employee.Name</h2>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top imgClass" src="~/images/noimage.png" asp-append-version="true" />
                <h4>Employee ID : @Model.Employee.Id</h4>
                <h4>Employee Email : @Model.Employee.Email</h4>
                <h4>Employee Dept : @Model.Employee.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary m-1">Back</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <script src="~/js/CustomScript.js"></script>
} 