@model IEnumerable<Employee>
<div class="card-deck">
    @foreach (var employee in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h4>@employee.Name</h4>
            </div>
            <img class="card-img-top imgClass" src="~/images/noimage.png" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-contoller="Home" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>


